{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Sources of Electricity by Continents",
  "width": 600,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/elee0036/datavis2/main/dataset.csv"
  },
  "params":[
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "Year", "type": "ordinal"},
    "y": {
      "aggregate": "sum", "field": "Electricity", "type": "quantitative",
      "title": "Electricity(TWh)"    
    },
    "color": {"field": "elec_from", "type": "nominal", "title": "Energy Source", 
      "scale": {
        "domain": ["Electricity_from_fossil_fuels", "Electricity_from_nuclear", "Electricity_from_renewables"],
        "range": ["#F2657C", "#83A9ED", "#F1C40F"]
      }
    },
    "tooltip": [
      {"field": "elec_from", "title": "Energy Source"},
      {"field": "Electricity", "aggregate": "sum", "title": "Electricity(TWh)"}
    ]
  },
  "transform": [
    {
      "fold": ["Electricity_from_fossil_fuels", "Electricity_from_nuclear", "Electricity_from_renewables"],
          "as": ["elec_from", "Electricity"]
    },
    {
      "calculate": "indexof(['Electricity_from_fossil_fuels', 'Electricity_from_nuclear', 'Electricity_from_renewables'], datum.Source)",
      "as": "order"
    }, 
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
  ]
}
